   		   		<activity android:name ="org.rushme.timecat.menu.menu_expiredList"></activity>
   		<activity android:name = "org.rushme.timecat.menu.menu_statistics"></activity> 
   		<activity android:name = "org.rushme.timecat.menu.menu_settings"></activity> 
   		<activity android:name ="org.rushme.timecat.menu.menu_ActiveTask"></activity>  
   		<activity android:name ="org.rushme.timecat.menu.menu_taskEdit"></activity> 
   		
   		
        </application>
  <uses-permission android:name="android.permission.INTERNET"></uses-permission>    
        
</manifest>
